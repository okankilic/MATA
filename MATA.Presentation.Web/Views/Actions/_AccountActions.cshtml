@model MATA.Presentation.Web.Models.Actions.ActionsIndexVM

@if(Model.TotalCount == 0)
{
    @:Bu hesaba ait hareket bulunmamaktadır
}
else
{
    WebGrid grid = new WebGrid(
        rowsPerPage: Model.PageSize,
        ajaxUpdateContainerId: "action-grid"
    );

    grid.Bind(Model.Actions, autoSortAndPage: false, rowCount: Model.TotalCount);

    var columnList = new List<WebGridColumn>()
    {
        new WebGridColumn
        {
            Header = "Ad Soyad",
            ColumnName = "FullName",
            CanSort = true
        },
        new WebGridColumn
        {
            Header = "",
            ColumnName = "ActionType"
        },
        new WebGridColumn
        {
            Header = "",
            ColumnName = "EntityName"
        },
        new WebGridColumn
        {
            Header = "",
            ColumnName = "EntityID"
        },
        new WebGridColumn
        {
            Header = "",
            ColumnName = "ActionTime"
        }
    };

    @grid.GetHtml(
        htmlAttributes: new { id = "action-grid" },
        tableStyle: "table table-hover",
        columns: columnList,
        mode: WebGridPagerModes.Numeric,
        numericLinksCount: 5
    )
}
