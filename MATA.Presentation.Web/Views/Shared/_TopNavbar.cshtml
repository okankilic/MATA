<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="~/">
                <img src="~/Content/Images/logo.png" />
            </a>
        </div>
        <div class="navbar-collapse collapse">
            @if (User.Identity.IsAuthenticated)
            {
            <ul class="nav navbar-nav">

                @if (User.IsInRole(RoleTypes.Admin))
                {
                    
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@MATA.Resources.Properties.Resources.Admin<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.LocalizedActionLink("Countries", "Index", "Countries")</li>
                        <li>@Html.LocalizedActionLink("Cities", "Index", "Cities")</li>
                        <li>@Html.LocalizedActionLink("Actions", "Index", "Actions")</li>
                        <li class="divider"></li>
                        <li>@Html.LocalizedActionLink("Accounts", "Index", "Accounts")</li>
                    </ul>
                </li>
                }

                @if (User.IsInRole(RoleTypes.Admin) || User.IsInRole(RoleTypes.Staff))
                {
                    <li>@Html.LocalizedActionLink("Projects", "Index", "Projects")</li>
                    <li>@Html.LocalizedActionLink("Stores", "Index", "Stores")</li>
                    <li>@Html.LocalizedActionLink("Issues", "Index", "Issues")</li>
                }

            </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">@User.Identity.Name</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-gear"></span> <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">@Html.Localize("Account")</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="@Url.Action("LogOut", "Accounts")">@Html.Localize("Logout")</a></li>
                        </ul>
                    </li>
                </ul>
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Login", "Accounts")">@Html.Localize("Login")</a></li>
                </ul>
            }
        </div>
    </div>
</div>
