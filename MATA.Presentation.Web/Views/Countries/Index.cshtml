@model MATA.Presentation.Web.Models.Countries.CountriesIndexVM

@{
    ViewBag.Title = $"{Html.Localize("Countries")} ({Model.TotalCount})";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @ViewBag.Title
</h2>

<p class="text-right">
    @Html.LocalizedActionLink("Create", "_Create", null, new { id = "mt-link-countries-create", @class = "btn btn-default" })
</p>

<div class="panel panel-default">
    <div class="panel-body">

        @{
            WebGrid grid = new WebGrid(
                rowsPerPage: Model.PageSize,
                ajaxUpdateContainerId: "country-grid",
                ajaxUpdateCallback: "countriesController.initGridEvents"
            );

            grid.Bind(Model.Countries, autoSortAndPage: false, rowCount: Model.TotalCount);
        }

        @grid.GetHtml(
            htmlAttributes: new { id = "country-grid" },
            tableStyle: "table table-hover",
            columns: new List<WebGridColumn>()
            {
                Html.LocalizedDetailsActionLinkColumn("CountryName", "ID", "Countries"),
                new WebGridColumn
                {
                    Format = (item) => Html.LocalizedActionLink("Details", "Details", new { id = item.ID })
                },
                new WebGridColumn
                {
                    Format = (item) => Html.LocalizedActionLink("Update", "_Edit", new { id = item.ID }, new { @class = "mt-link-countries-edit", data_entity_id = item.ID })
                }
            },
            mode: WebGridPagerModes.Numeric,
            numericLinksCount: 5
        )

    </div>
</div>

@section scripts {

    <script src="~/ts/mata.countries-controller.js"></script>
}
