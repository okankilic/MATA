@model MATA.Presentation.Web.Models.Stores.StoresIndexVM

@{
    WebGrid grid = new WebGrid(
        rowsPerPage: Model.PageSize,
        ajaxUpdateContainerId: "store-grid",
        ajaxUpdateCallback: "storesController.initGridEvents"
    );

    grid.Bind(Model.Stores, autoSortAndPage: false, rowCount: Model.PageSize);
}

@grid.GetHtml(
    htmlAttributes: new { id = "store-grid" },
    tableStyle: "table table-hover",
    columns: new List<WebGridColumn>()
    {
        new WebGridColumn
        {
            Header = "Şantiye Adı",
            ColumnName = "StoreName",
            CanSort = false,
            //Style = "width: 300px"
        },
        new WebGridColumn
        {
            Header = "Adres",
            ColumnName = "Address",
            CanSort = false
        },
        new WebGridColumn
        {
            Header = "Oluşturan",
            ColumnName = "CreatedBy",
            CanSort = false
        },
        new WebGridColumn
        {
            Header = "Oluşturulma Zamanı",
            ColumnName = "CreateTime",
            CanSort = false
        },
        new WebGridColumn
        {
            //Style = "auto-width",
            Format = (item) => Html.ActionLink("Detay", "Details", new { id = item.ID })
        },
        new WebGridColumn
        {
            //Style = "auto-width",
            Format = (item) => Html.ActionLink("Güncelle", "_Edit", new { id = item.ID }, new { @class = "mt-link-stores-edit", data_entity_id = item.ID })
        }
    },
    mode: WebGridPagerModes.Numeric,
    numericLinksCount: 5
)

<script src="~/ts/mata.stores-controller.js"></script>
