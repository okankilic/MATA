@model MATA.Data.DTO.Models.ProjectDTO

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.ProjectName</h2>

<div class="row">

    <div class="col-sm-4">

        <div class="panel panel-default">
            <div class="panel-body">
                <div>
                    <h4>
                        Proje Bilgileri
                        @if (User.IsInRole(RoleTypes.Admin) || User.IsInRole(RoleTypes.Staff))
                        {
                            <a href="@Url.Action("_Edit", "Projects", new { id = Model.ID })" class="pull-right">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        }
                    </h4>
                    <hr />
                    <dl class="">
                        <dt>
                            @Html.DisplayNameFor(model => model.ProjectName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProjectName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Remarks)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Remarks)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>

        @if (User.IsInRole(RoleTypes.Admin))
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>
                        Düzenleme Bilgileri
                    </h4>
                    <hr />
                    <dl>

                        <dt>
                            @Html.DisplayNameFor(model => model.CreatedBy) / @Html.DisplayNameFor(model => model.CreateTime)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CreatedBy) (@Html.DisplayFor(model => model.CreateTime))
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.UpdatedBy) / @Html.DisplayNameFor(model => model.UpdateTime)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UpdatedBy) (@Html.DisplayFor(model => model.UpdateTime))
                        </dd>

                    </dl>
                </div>
            </div>
        }

    </div>

    <div class="col-sm-8">

        @Html.PartialViewContainer(Url.Action("_ProjectStores", "Stores", new { projectID = Model.ID, page = 1 }))

        @Html.PartialViewContainer(Url.Action("_ProjectIssues", "Issues", new { projectID = Model.ID, page = 1 }))

        @Html.PartialViewContainer(Url.Action("_ProjectAttachments", "Attachments", new { projectID = Model.ID, page = 1 }))

    </div>
</div>

@section scripts{

    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/ts/mata.projects-controller.js"></script>

    <script type="text/javascript">

        window.onload = function () {
            MATA.Utils.initPartialViewContainers();
        }

    </script>

}
