@model MATA.Presentation.Web.Models.Attachments.AttachmentsCreateVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Yeni Dosya</h4>
</div>

@using (Html.BeginForm("Create", "Attachments", FormMethod.Post, new { id = "mt-form-attachments-create", @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="modal-body">

        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Attachment.EntityName)
        @Html.HiddenFor(model => model.Attachment.EntityID)

        <div class="form-group">
            @Html.LabelFor(model => model.Attachment.AttachmentType, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-8">
                @Html.EnumDropDownListFor(model => model.Attachment.AttachmentType, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Attachment.AttachmentType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AttachmentFile, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.AttachmentFile, new { @class = "form-control", type = "file" })
                @Html.ValidationMessageFor(model => model.AttachmentFile, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" aria-label="Close">Kapat</button>
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
}

